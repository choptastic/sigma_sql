%% vim: ts=4 sw=4 et ft=erlang
{cover_enabled, true}.

{erl_opts, [
    debug_info
]}.

{deps, [
    b64fast,
    erlias,
    poolboy,
    epgsql,%  {git, "https://github.com/choptastic/epgsql", {branch, master}}},
    epgsql_decimal,
    %mysql
    {mysql,   {git, "https://github.com/choptastic/mysql-otp", {branch, decimal_force_number}}}
]}.

{dialyzer, [
    {plt_apps, all_deps},
    {plt_extra_apps, [
        syntax_tools,
        mysql,
        epgsql,
        epgsql_decimal,
        poolboy,
        b64fast,
        decimal,
        erlias
    ]}
]}.

